                            <% if (user.role === 'admin' || user.ministerio === ministerio) { %>
                            <li class="nav-item">
                                <a class="nav-link text-truncate" href="/ministerio/<%= encodeURIComponent(ministerio) %>" target="_blank">
                                    <i class="fas fa-external-link-alt me-2 text-muted"></i>
                                    <span style="font-size: 0.9em;"><%= ministerio %></span>
                                </a>
                            </li>
                            <% } %>
                        <% }) %>
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 admin-content">
