    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-white sidebar collapse">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link <%= title.includes('Dashboard') ? 'active' : '' %>" href="/admin/dashboard">
                                <i class="fas fa-tachometer-alt me-2"></i>
                                Dashboard
                            </a>
                        </li>
                        
                        <% if (user.role === 'admin') { %>
                        <li class="nav-item">
                            <a class="nav-link <%= title.includes('Usuarios') ? 'active' : '' %>" href="/admin/usuarios">
                                <i class="fas fa-users me-2"></i>
                                Gestión de Usuarios
                            </a>
                        </li>
                        <% } %>
                        
                        <li class="nav-item">
                            <a class="nav-link <%= title.includes('Medios') ? 'active' : '' %>" href="/admin/medios">
                                <i class="fas fa-images me-2"></i>
                                Gestión de Medios
                            </a>
                        </li>
                        
                        <li class="nav-item mt-3">
                            <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                                <span>Ministerios</span>
                            </h6>
                        </li>
                        
