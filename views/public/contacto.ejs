                                        <option value="informacion-general">Información General</option>
                                        <option value="primera-visita">Primera Visita</option>
                                        <option value="ministerios">Unirse a un Ministerio</option>
                                        <option value="oracion">Petición de Oración</option>
                                        <option value="otro">Otro</option>
                                    </select>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label for="mensaje" class="form-label">Mensaje *</label>
                                <textarea class="form-control" id="mensaje" name="mensaje" rows="5" 
                                          placeholder="Cuéntanos cómo podemos ayudarte..." required></textarea>
                            </div>
                            
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="newsletter" name="newsletter">
                                <label class="form-check-label" for="newsletter">
                                    Deseo recibir información sobre eventos y actividades de la iglesia
                                </label>
                            </div>
                            
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-paper-plane me-2"></i>
                                    Enviar Mensaje
