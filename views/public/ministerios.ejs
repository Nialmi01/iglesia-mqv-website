    <!-- Contenido Principal -->
    <main class="main-content page-transition">

<!-- Page Header -->
<section class="page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-5 fw-bold mb-3">Nuestros Ministerios</h1>
                <p class="lead mb-0">
                    Descubre las diferentes áreas donde puedes servir y crecer en tu fe. 
                    Cada ministerio es una oportunidad para usar tus dones y talentos para la gloria de Dios.
                </p>
            </div>
            <div class="col-lg-4 text-center">
                <i class="fas fa-hands-helping page-icon"></i>
            </div>
        </div>
    </div>
</section>

<!-- Ministerios Grid -->
<section class="content-section">
    <div class="container">
        <div class="row">
            <% ministerios.forEach((ministerio, index) => { %>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="unified-card ministerio-card">
                        <div class="icon-wrapper">
                            <i class="<%= ministerio.icono %>"></i>
                        </div>
                        
                        <h4 class="card-title mb-3"><%= ministerio.nombre %></h4>
                        <p class="card-text text-muted mb-3">
                            <%= ministerio.descripcion %>
                        </p>
                        
                        <div class="mb-3">
                            <small class="text-muted">
                                <i class="fas fa-images me-1"></i>
                                <%= ministerio.totalMedias || 0 %> contenidos multimedia
                            </small>
                        </div>
                        
                        <a href="/ministerio/<%= encodeURIComponent(ministerio.nombre) %>" 
                           class="btn btn-primary">
                            <i class="fas fa-arrow-right me-2"></i>
                            Explorar Ministerio
                        </a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</section>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="mb-4">¿Quieres ser parte de un Ministerio?</h2>
                <p class="lead mb-4">
                    Dios tiene un propósito específico para tu vida y dones únicos que puedes usar para bendecir a otros. 
                    ¡Te invitamos a formar parte de nuestros ministerios!
                </p>
                
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="text-center">
                            <i class="fas fa-pray fa-2x text-primary mb-2"></i>
                            <h5>Ora</h5>
                            <p class="small text-muted">Busca la dirección de Dios para tu servicio</p>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="text-center">
                            <i class="fas fa-search fa-2x text-primary mb-2"></i>
                            <h5>Explora</h5>
                            <p class="small text-muted">Conoce más sobre cada ministerio</p>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="text-center">
                            <i class="fas fa-handshake fa-2x text-primary mb-2"></i>
                            <h5>Únete</h5>
                            <p class="small text-muted">Contáctanos para formar parte</p>
                        </div>
                    </div>
                </div>
                
                <div class="mt-4">
                    <a href="/contacto" class="btn btn-primary btn-lg me-3">
                        <i class="fas fa-envelope me-2"></i>
                        Contáctanos
                    </a>
                    <a href="tel:+1234567890" class="btn btn-outline-primary btn-lg">
                        <i class="fas fa-phone me-2"></i>
                        Llamar
                    </a>
